{
    "name": "mosaicolab/meride-php-lib",
    "description": "Libraries to interact with Meride platform",
    "type": "library",
    "license": "proprietary",
    "authors": [
        {
            "name": "MosaicoDevTeam",
            "email": "giovanni.toppi@mosaicolab.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^6",
        "apigen/apigen": "dev-master",
        "roave/better-reflection": "dev-master#ce9d784"
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "Meride\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "prefer-stable": true,
    "archive": {
        "exclude": ["/tests", "bitbucket-pipelines.yml"]
    }
}
